<GridContainer Rows="min-content min-content" Height="100%" Width="100%" Columns="1fr max-content">
    <GridItem>
        <CustomLabel FontSize="25px" Bold="true">
            Food:
        </CustomLabel>
    </GridItem>
    <GridItem Column="2">
        <CustomLabel FontSize="25px" Bold="true">
            Last Date
        </CustomLabel>
    </GridItem>
    <GridItem Row="2">
        <CustomLabel FontSize="25px" Bold="false">
            @CurrentFood
        </CustomLabel>
    </GridItem>
    <GridItem Row="2" Column="2">
        <CustomLabel FontSize="25px" Bold="false">
            @CurrentDisplayDate
        </CustomLabel>
    </GridItem>
</GridContainer>